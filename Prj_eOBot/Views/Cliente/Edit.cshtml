@model IEnumerable<Prj_Infraestructure.Models.Rl_Robot>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<div class="container">

    <div class="row" id="cancel-row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
            <div class="widget">
                <div class="widget-heading mt-2">
                    <h4 style="padding-bottom: 15px; text-align:center" class="font-weight-450 mb-0"> Clientes</h4>
                </div>
                @foreach (var item in Model)
                {
                    <input type="text" id="id" name="nombre" class="form-control" hidden value="@item.ID" />
                    <div class="form-horizontal" style="box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;padding:20px;">
                        <div class="form-group row mb-2">
                            <label for="TematicaID" class="control-label col-md-2">Email</label>
                            <div class="col-md-10">
                                <input type="text" id="email" name="email" class="form-control" value="@item.UserName" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="TematicaID" class="control-label col-md-2">Contraseña</label>
                            <div class="col-md-10">
                                <input type="text" id="password" name="password" class="form-control" value="@item.Password" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Login Url</label>
                            <div class="col-md-10">
                                <input type="text" id="url" name="url" class="form-control" value="@item.LoginUrl" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Node Name</label>
                            <div class="col-md-10">
                                <input type="text" id="nodeName" name="nodeName" class="form-control" value="@item.NodeName" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Hora de inicio Reporte</label>
                            <div class="col-md-10">
                                <input type="time" id="inicioReporte" name="inicioReporte" class="form-control" value="@item.TimeGenReports.ToString("HH:mm:ss")" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Hola finalizada Reporte </label>
                            <div class="col-md-10">
                                <input type="time" id="finReporte" name="finReporte" class="form-control" value="@item.TimeDownReports.ToString("HH:mm:ss")" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Time Span </label>
                            <div class="col-md-10">
                                <input type="text" id="timespan" name="timespan" class="form-control" value="@item.Timespan" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Carpeta </label>
                            <div class="col-md-10">
                                <input type="text" id="urlcarpeta" name="urlcarpeta" class="form-control" value="@item.LocalFolder" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2" id="conteinerTematicaPadre">
                            <label for="TematicaID" class="control-label col-md-2">Status</label>
                            <div class="col-md-10">
                                <select class="form-select" aria-label="Default select example" id="statusSelect">
                                    <option value="0" @(item.StatusClient == 0 ? "selected" : "")>Seleccione un status</option>
                                    <option value="1" @(item.StatusClient == 1 ? "selected" : "")>Activo</option>
                                    <option value="2" @(item.StatusClient == 2 ? "selected" : "")>Inactivo</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Fecha de suscripción </label>
                            <div class="col-md-10">
                                @if (item.DateSubscribe.HasValue)
                                {
                                    <input type="text" id="fechaSuscripcion" name="fechaSuscripcion" class="form-control" value="@item.DateSubscribe.Value.ToString("dd/MM/yyyy")" />
                                }
                                else
                                {
                                    <input type="text" id="fechaSuscripcion" name="fechaSuscripcion" class="form-control" value="" />
                                }
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Notificar </label>
                            <div class="col-md-10">
                                <input type="text" id="emailNotificacion" name="emailNotificacion" class="form-control" value="@item.EmailNotificaciones" placeholder="Email (ejemplo@gmail.com)" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Ultimo reporte </label>
                            <div class="col-md-10">
                                <input type="text" id="ultimoreporte" name="ultimoreporte" class="form-control" value="@item.FechaHoraUltimoReporte" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mb-2">
                            <label for="AceptoTerminos" class="control-label col-md-2">Token </label>
                            <div class="col-md-10">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">@item.Token</textarea>
                               @* <input type="text" id="ultimoreporte" name="ultimoreporte" class="form-control" value="@item.FechaHoraUltimoReporte" />*@
                                <span class="text-danger"></span>
                            </div>
                        </div>


                    </div>
                }
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12" style="text-align:right; display:block;">
                    <input type="submit" value="Actualizar" id="btnActualizar" class="btn" style="background-color:#147A55; color:white" />
                    <a class="btn" style="background-color:#D8431D; color:white;" type="button" href="/Cliente/Index">Regresar</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {


            $('#btnActualizar').click(function (e) {
                e.preventDefault();
               
                    guardarDatos();
                

            });

            function guardarDatos() {

                var idValue = $("#id").val();
                var emailValue = $("#email").val();
                var passwordValue = $("#password").val();
                var urlValue = $("#url").val();
                var nodeNameValue = $("#nodeName").val();
                var inicioReporteValue = $("#inicioReporte").val();
                var finReporteValue = $("#finReporte").val();
                var timespanValue = $("#timespan").val();
                var urlcarpetaValue = $("#urlcarpeta").val();
                var statusSelectValue = $("#statusSelect").val();             
                var emailNotificacionValue = $("#emailNotificacion").val();             
                var tokenValue = $("#token").val();


                var data = {
                    ID: idValue,                  
                    UserName: emailValue,
                    Password: passwordValue,
                    LoginUrl: urlValue,
                    NodeName: nodeNameValue,
                    TimeGenReports: inicioReporteValue,
                    TimeDownReports: finReporteValue,
                    Timespan: timespanValue,
                    LocalFolder: urlcarpetaValue,                 
                    StatusClient: statusSelectValue,  
                    EmailNotificaciones: emailNotificacionValue,
                    Token: tokenValue
                };

                $.ajax({
                    type: "POST",
                    url: "/Cliente/Save",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {

                        if (response.success) {
                            window.location.href = "/Cliente/Index";
                        } else {
                            alert("Error al guardar el registro: " + response.message);
                        }
                    },
                    error: function (xhr, status, error) {

                        console.error(xhr.responseText);
                    }
                });
            }



        });

    </script>
}
